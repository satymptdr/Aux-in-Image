<body>
    <h1>XMeme Feed</h1>
    <div class="container1">
        <form action="/submit" method="post">
        <h3>Insert Meme</h3>
        <h5>Name:</h5>
        <div class="box">
            <input type="name" Name="name" id="name" placeholder="Enter Your Name">
        </div>
        <h5>Caption:</h5>
        <div class="box">
            <input type="caption" Name="caption" id="caption" placeholder="Enter Caption">
        </div>
        <h5>Url:</h5>
        <div class="box">
            <input type="url" Name="url" id="url" placeholder="Enter Url">
        </div>
        <button class="btn">Submit</button>
        
    </form>
    <form action="/update" method="post">
        <h3>Update Meme</h3>
        <h5>Name:</h5>
        <div class="box">
            <input type="name" Name="name" id="name" placeholder="Enter Name to update">
        </div>
        <h5>Caption:</h5>
        <div class="box">
            <input type="caption" Name="caption" id="caption" placeholder="Enter Caption">
        </div>
        <h5>Url:</h5>
        <div class="box">
            <input type="url" Name="url" id="url" placeholder="Enter Url">
        </div>
        <button class="btn">Update</button>
    </form>
    <form action="/delete" method="delete">
        <h3>Delete Meme:</h3>
        <h5>Name:</h5>
        <div class="box">
            <input type="name" Name="name" id="name" placeholder="Enter Name to delete">
        </div>
        <button class="btn">Delete</button></form>
    </div>
    <!-- Container to display images -->
    <div class="container2">
        <%if (values.length >0 )%>
        <%values.forEach(function (value) {%>
            <label for="">Name :</label>
            <h1>
                <%=value.name%>
            </h1>
            <label for="">Caption : </label>
            <h2>
                <%=value.caption%>
            </h2>
            <label for="">Url : </label>
            <h2>
                <%=value.url%>
            </h2>
            
        <%})%>
        
    </div>
        
